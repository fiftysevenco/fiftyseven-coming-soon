{
	"extends": "standard",
	"rules": {
		"no-tabs": "off",
		"indent": ["error", "tab", {
			"SwitchCase": 1,
			"MemberExpression": "off"
		}],
		"semi": "off",
		"no-useless-escape": "off",
		"one-var": "off",
		"no-use-before-define": "error",
		"new-cap": ["error", {
			"properties": false
		}],
		"space-before-function-paren": ["error", {
			"anonymous": "always",
			"named": "never"
		}],
		"brace-style": ["error", "stroustrup"]
	}
}
